<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <a class="btn btn-info btn-sm" href="{{ path('app_user_show', {'id': user.id}) }}"><i class="ti-book mr-2"></i></a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_user_edit', {'id': user.id}) }}"><i class="ti-pencil mr-2"></i></a>
    <button class="btn btn-danger btn-sm"><i class="ti-trash mr-2"></i></button>
</form>
